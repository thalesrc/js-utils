{
	"rules": {
		"max-line-length": [true, 200],
		"no-inferrable-types": true,
		"class-name": true,
		"comment-format": [
			true,
			"check-space"
		],
		"indent": [
			true,
			"spaces",
			2
		],
		"eofline": true,
		"no-duplicate-variable": true,
		"no-eval": true,
		"no-arg": true,
		"no-internal-module": true,
		"no-trailing-whitespace": true,
		"no-bitwise": false,
		"no-unused-expression": true,
		"no-var-keyword": true,
		"no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
		"one-line": [
			true,
			"check-catch",
			"check-else",
			"check-open-brace",
			"check-whitespace"
		],
		"quotemark": [
			true,
			"double",
			"avoid-escape"
		],
		"semicolon": [true, "always"],
		"typedef-whitespace": [
			true,
			{
				"call-signature": "nospace",
				"index-signature": "nospace",
				"parameter": "nospace",
				"property-declaration": "nospace",
				"variable-declaration": "nospace"
			}
		],
		"curly": true,
		"variable-name": [
			true,
			"ban-keywords",
			"check-format",
			"allow-leading-underscore",
			"allow-pascal-case"
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-separator",
			"check-type"
		]
	}
}